#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🧪 Running tests before push..."

# Run type checking across all packages
echo "🔍 Type checking..."
pnpm typecheck

# Run linting
echo "🧹 Running linter..."
pnpm lint

# Run the test suite
echo "🧪 Running tests..."
pnpm test:run

echo "✅ All checks passed! Safe to push."
